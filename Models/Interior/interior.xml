<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>inttour</object-name>
    <object-name>intbaieH</object-name>
    <object-name>intbaieB</object-name>
    <object-name>inttourbaieH</object-name>
    <object-name>inttourbaieB</object-name>

    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>intvitres</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>intvitres</object-name>
  </animation>

  <!-- Pilote -->
  <model>
    <path>Aircraft/dhc4/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -8.647 </x-m>
      <y-m> -0.576 </y-m>
      <z-m> -1.963 </z-m>
      <roll-deg>    0 </roll-deg>
      <pitch-deg>   0 </pitch-deg>
      <heading-deg> 0 </heading-deg>
    </offsets>
  </model>

  <!-- Siege -->
  <model>
    <path>Aircraft/dhc4/Models/Interior/seat/seat.xml</path>
    <offsets>
      <x-m> -8.723 </x-m>
      <y-m> -0.579 </y-m>
      <z-m> -2.093 </z-m>
      <roll-deg>    0 </roll-deg>
      <pitch-deg>   0 </pitch-deg>
      <heading-deg> 0 </heading-deg>
    </offsets>
  </model>

  <!-- Copilote
  <model>
    <path>Aircraft/dhc4/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -13.204 </x-m>
      <y-m>   0.605 </y-m>
      <z-m>  -2.659 </z-m>
      <roll-deg>    0 </roll-deg>
      <pitch-deg>   0 </pitch-deg>
      <heading-deg> 0 </heading-deg>
    </offsets>
  </model> -->

  <!-- Siege -->
  <model>
    <path>Aircraft/dhc4/Models/Interior/seat/seat.xml</path>
    <offsets>
      <x-m> -8.723 </x-m>
      <y-m>  0.579 </y-m>
      <z-m> -2.093 </z-m>
      <roll-deg>    0 </roll-deg>
      <pitch-deg>   0 </pitch-deg>
      <heading-deg> 0 </heading-deg>
    </offsets>
  </model>

  <!-- Planche de bord -->
  <model>
    <path>Aircraft/dhc4/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -9.161 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -2.142 </z-m>
    </offsets>
  </model>

  <!-- Portes cargo arriere -->
  <animation>
    <name>IntPorteBaieB</name>
    <object-name>intbaieB</object-name>
    <object-name>inttourbaieB</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>IntPorteBaieB</object-name>
    <property>instrumentation/doors/passenger/position-norm</property>
    <factor> 45 </factor>
    <center>
      <x-m>  0.782 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -3.806 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <name>IntPorteBaieH</name>
    <object-name>intbaieH</object-name>
    <object-name>inttourbaieH</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>IntPorteBaieH</object-name>
    <property>instrumentation/doors/passenger/position-norm</property>
    <factor> 20 </factor>
    <center>
      <x-m>  5.614 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -1.924 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

</PropertyList>

